script(src="/javascripts/map.js")

div.picnic.stripes
	test

div#wrapper(ng-controller="MapCtrl")
	div#search
		input(type="text", ng-model="query")

	div#flat
		img(ng-src="{{mapUrl}}")
		div(title="{{poi.Name}}",ng-repeat="poi in pois",class="marker open-{{poi.OpenToday}}", style="{{poi.style}}", ng-mouseover="popupOpen = !popupOpen", ng-mouseleave="popupOpen = !popupOpen")
			img(ng-src="{{poi.IconUrl}}")
			div.popup(ng-show="popupOpen")
				div.popupName
					{{poi.Name}}
				div.popupAddress
					{{poi.Address}}

	div#menuLeft(ng-click="menuOpen = !menuOpen")

	div#overlay(ng-show="menuOpen")
		div#menu
